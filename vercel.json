{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "node scripts/generate-config.js && npx convex deploy --cmd 'echo Build complete'",
  "outputDirectory": ".",
  "installCommand": "npm install",
  "framework": null,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
