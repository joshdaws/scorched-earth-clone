{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "./_generated/*": ["./convex/_generated/*"]
    }
  },
  "include": ["convex/**/*.ts"],
  "exclude": ["node_modules", "convex/_generated"]
}
