{
  "name": "scorched-earth-clone",
  "version": "1.0.0",
  "description": "A faithful browser-based clone of the classic 1991 MS-DOS game Scorched Earth with retro synthwave aesthetics",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server -p 8080 -c-1",
    "dev": "npx http-server -p 8080 -c-1 & npm run watch",
    "screenshot": "node scripts/screenshot.js",
    "screenshot:menu": "node scripts/screenshot.js menu",
    "screenshot:game": "node scripts/screenshot.js game",
    "watch": "echo 'Watching for changes...'",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "keywords": [
    "game",
    "scorched-earth",
    "retro",
    "synthwave",
    "browser-game",
    "canvas"
  ],
  "author": "Josh Daws",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1",
    "puppeteer": "^22.8.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joshdaws/scorched-earth-clone.git"
  }
}